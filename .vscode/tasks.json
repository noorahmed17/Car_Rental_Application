{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Car Rental Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Iinclude",
                "-static",
                "SWE_Project.cpp",
                "src/Cars.cpp",
                "src/File.cpp",
                "src/Manager.cpp",
                "src/Driver.cpp",
                "src/User.cpp",
                "-o",
                "SWE.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build the full project with static linking for VS Code output"
        }
    ]
}